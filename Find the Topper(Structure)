#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>
struct marks{
int maths;
int science;
int english;
int computer;
};

struct student{
int roll;
char name[100];
struct marks m;
int total;
};

int main() {
    int n;
    scanf("%d",&n);
    struct student s[n];
    for(int i=0;i<n;i++){
         scanf("%d",&s[i].roll);
        scanf("%s",&s[i].name);
        scanf("%d",&s[i].m.maths);
        scanf("%d",&s[i].m.science);
        scanf("%d",&s[i].m.english);
        scanf("%d",&s[i].m.computer);
          
        
        s[i].total=s[i].m.maths+s[i].m.science+s[i].m.english+s[i].m.computer;
    }
    
    int maxindex=0;
    for(int i=1;i<n;i++){
        if(s[i].total >= s[maxindex].total){
            maxindex=i;
        }
    }
    printf("Topper Details:");
    printf("\nRoll No: %d\n",s[maxindex].roll);
    printf("Name: %s\n",s[maxindex].name);
    printf("Total Marks: %d",s[maxindex].total);
    return 0;
}

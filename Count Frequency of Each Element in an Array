#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
    int n;
    scanf("%d",&n);
    int arr[n];
    for(int i=0;i<n;i++){
        scanf("%d",&arr[i]);
    }
    int verified[101]={0};
    for(int i=0;i<n;i++){
        if(verified[i]==1){
            continue;
        }
        int count=1;
        for(int j=i+1;j<n;j++){
            if(arr[i]==arr[j]){
                count++;
        verified[j]=1;
            }
        }
        printf("%d: %d",arr[i],count);
        if(i<n-1)
            printf("\n");
    }
    return 0;
}

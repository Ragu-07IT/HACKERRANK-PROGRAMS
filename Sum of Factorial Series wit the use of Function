#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>
int isfact(int n){
    int fact=1;
    for(int i=1;i<=n;i++){
     fact+=fact*i;
    }
     return fact;
}

int main() {
    int n,sum=0;
    scanf("%d",&n);
    for(int i=0;i<n;i++){
        sum=sum+isfact(i);
    }
    printf("%d",sum);
    return 0;
}
